@article{selsto_alternative_2007,
  title = {Alternative descriptions of the light-matter interaction beyond the dipole approximation},
  author = {Selst\o{}, S\o{}lve and F\o{}rre, Morten},
  journal = {Phys. Rev. A},
  volume = {76},
  number = {2},
  year = {2007},
  pages = {023427},
  doi = {10.1103/PhysRevA.76.023427},
  abstract = {Different descriptions of the light-matter interaction which include the full spatial dependence of the electromagnetic field are presented. It is demonstrated how nondipole forms of both the Kramers-Henneberger and the length gauge Hamiltonians may be obtained from the minimum-coupling Hamiltonian in the velocity gauge through the Baker-Hausdorff lemma. Furthermore, the length gauge version of the Dirac equation is presented. The applicability of the different descriptions is discussed.}
}

%%% High efficiency in low-order harmonics
@article{hu_high-efficiency_2001,
  title = {High-efficiency high-order harmonic generation without tunneling},
  author = {Hu, S X and Milo\v{s}evi\'c, D B and Becker, W and Sandner, W},
  journal = {Phys. Rev. A},
  volume = {64},
  number = {1},
  year = {2001},
  pages = {013410},
  doi = {10.1103/PhysRevA.64.013410},
  abstract = {High-order harmonic emission is calculated for a highly charged ion exposed to an ultra-intense laser field with an intensity near saturation. Low-order harmonics having an energy lower than the ionization potential Ip are emitted with extremely high efficiency. In contrast to their usual behavior, the low-order harmonics may exhibit a plateau that is amenable to a classical mechanism or a resonancelike maximum, depending on the shape of the binding potential. Tunneling is not involved.}
}


%%% Stabilization beyond the dipole regime
@article{kylstra_breakdown_2000,
  title = {Breakdown of Stabilization of Atoms Interacting with Intense, High-Frequency Laser Pulses},
  author = {Kylstra, N. J. and Worthington, R. A. and Patel, A. and Knight, P. L. and V\'azquez de Aldana, J. R. and Roso, L.},
  journal = {Phys. Rev. Lett.},
  volume = {85},
  number = {9},
  year = {2000},
  pages = {1835--1838},
  doi = {10.1103/PhysRevLett.85.1835},
  abstract = {An analysis of the influence of the magnetic field of an intense, high-frequency laser pulse on the stabilization of an atomic system is presented. We demonstrate that at relatively modest intensities the magnetic field can significantly alter the dynamics of the system. In particular, a breakdown of stabilization occurs, thereby restricting the intensity regime in which the atom is relatively stable against ionization. Counterpropagating pulses do not negate the detrimental effects of the magnetic field. We compare our quantum mechanical results with classical Monte Carlo simulations.}
}


%%% Classical (Monte Carlo) HHG calculation, with pretty different spectra
@article{keitel_relativistic_1993,
  title = {Relativistic High-Harmonic Generation},
  author = {Keitel, C. H. and Knight, P. L. and Burnett, K.},
  journal = {Europhys. Lett.},
  volume = {24},
  number = {7},
  year = {1993},
  pages = {539},
  doi = {10.1209/0295-5075/24/7/006},
  abstract = {We present a relativistic treatment of the dynamics of a classical highly excited model hydrogen atom in an ultra-intense classical laser field. Both single trajectories of the electron evolutions and ensemble averaged distribution are investigated via the standard Monte Carlo method. special emphasis is put on the harmonic spectra and on the relativistic features of high-harmonic generation. In particular we find that reversals of the electron trajectories at velocities close to the speed of light give rise to intense slowly exponentially decreasing harmonics in the lower-frequency part of the spectrum, while a wide plateau arises when these reversals occur close to the nucleus.}
}

